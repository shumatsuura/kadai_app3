<% if logged_in? %>
  <div class="new_feed">
    <%= link_to '投稿を作成する',new_feed_path %>
  </div>
<% end %>

<h1>投稿一覧</h1>

<% @feeds.each do |feed| %>
  <div class="posted_feeds">
    <table>
      <tr>
        <td><%= link_to "#{feed.user.name}", user_path(feed.user_id) %></td>
      </tr>
      <tr>
        <td><%= image_tag feed.image.url %></td>
      </tr>
      <tr>
        <td><%= feed.content %></td>
      </tr>
    </table>
    <%= link_to "詳細", feed_path(feed.id) %>
    <% if logged_in? %>
      <% if current_user.id == feed.user_id %>
        <%= link_to "編集", edit_feed_path(feed.id) %>
        <%= link_to "削除", feed_path(feed.id), method: :delete ,data: {confirm: '本当に削除していいですか？'}%>
      <% end %>
    <% end %>
  </div>
<% end %>
