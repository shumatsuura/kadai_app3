<div class="form">
  <%= form_with(model: @feed, url: choose_new_or_edit,local: true) do |form| %>
    <% if @feed.errors.any? %>
      <div id="error_explanation" class="center">
        <h2><%= @feed.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @feed.errors.full_messages.each do|msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <br>
    <table>
      <div class="field">
        <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %><br>
        <tr>
          <td><%= form.label :image %></td>
          <td><%= form.file_field :image %></td>
        </tr>
        <%= form.hidden_field :image_cache %>
      </div>

      <div class="feed_content">
        <td><%= form.label :content %></td>
        <td><%= form.text_field :content %></td>
      </div>
      <tr>
        <td></td>
        <td><%= form.submit %></td>
      </tr>
    </table>
  <% end %>
</div>
