<h1>Profile Edit</h1>

<% if @user.errors.any? %>
  <div id="error_explanation" class="center">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with(model: @user, local: true) do |f| %>
  <table>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.email_field :email %></td>
    </tr>
      <td>現在のプロフィール画像 </td>
      <td><%= image_tag(@user.profile_photo.url) if @user.profile_photo && @user.profile_photo.url %></td>
    <tr>
      <td><%= f.label :profile_photo %></td>
      <td><%= f.file_field :profile_photo %></td>
    </tr>
    <%= f.hidden_field :profile_photo_cache %>

    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td><%= f.submit "Update my account" %></td>
    </tr>
  </table>
<% end %>
