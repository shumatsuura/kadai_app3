<h1><%= @user.name %>のお気に入り投稿一覧</h1>

<% @pictures.each do |picture| %>

  <table>
    <tr>
      <td>ユーザー名：<%= link_to "#{picture.user.name}", user_path(picture.user_id) %></td>
    </tr>
    <tr>
      <td>コメント：<%= picture.content %></td>
    </tr>
    <tr>
      <td><%= image_tag picture.image.url %></td>
    </tr>
  </table>

<% end %>
