<h1><%= @user.name %>のお気に入り投稿一覧</h1>

<% @feeds.each do |feed| %>

  <table>
    <tr>
      <td>ユーザー名：<%= link_to "#{feed.user.name}", user_path(feed.user_id) %></td>
    </tr>
    <tr>
      <td>コメント：<%= feed.content %></td>
    </tr>
    <tr>
      <td><%= image_tag feed.image.url %></td>
    </tr>
  </table>

<% end %>
